<%- include("header"); -%>


  <form class="form-signin" action="/compose" method="post">
    <h2 class="form-signin-heading">Compose</h2>
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle">
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-dark" type="submit" name="button">Post</button>
  </form>
